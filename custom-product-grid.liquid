{% comment %}
  Theme Section: Centered 3D Slider (GSAP)
  Description: Header Top, 3D Slider Middle, Controls Bottom.
{% endcomment %}

<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/Draggable.min.js"></script>

<div class="c3d-wrapper" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
  <div class="c3d-container">
    
    <div class="c3d-header">
      <span class="c3d-subtitle"> {{ section.settings.subtitle }}</span>
      <h2 class="c3d-heading">{{ section.settings.heading }}</h2>
      <div class="c3d-line" style="background-color: {{ section.settings.text_color }}"></div>
      <p class="c3d-desc">{{ section.settings.description }}</p>
    </div>

    <div class="c3d-content">
      <div class="cv-scene">
        <div class="cv-track">
          {% for block in section.blocks %}
            {% assign product = all_products[block.settings.product_handle] %}
            
            <div class="cv-card" data-index="{{ forloop.index0 }}">
              <div class="cv-card-inner">
                <a href="{{ product.url }}" class="cv-link">
                  {% if block.settings.custom_image != blank %}
                    <img src="{{ block.settings.custom_image | image_url: width: 800 }}" alt="Product" class="cv-img" loading="lazy">
                  {% elsif product.featured_image != blank %}
                    <img src="{{ product.featured_image | image_url: width: 800 }}" alt="{{ product.title }}" class="cv-img" loading="lazy">
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'cv-img placeholder' }}
                  {% endif %}
                </a>
                
                <div class="cv-side-text">
                  <span>{{ section.settings.vertical_text }}</span>
                </div>

                <div class="cv-info">
                  <h3 class="cv-title">{{ product.title | default: 'Product Title' }}</h3>
                  <p class="cv-price">{{ product.price | money | default: '$150.00' }}</p>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>

    <div class="c3d-controls">
      <button class="c3d-btn prev">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M15 18l-6-6 6-6"/></svg>
      </button>
      <button class="c3d-btn next">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M9 18l6-6-6-6"/></svg>
      </button>
    </div>

  </div>
</div>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600&family=Montserrat:wght@300;400;600&display=swap');

  .c3d-wrapper {
    width: 100%;
    padding: 80px 0;
    overflow: hidden;
    position: relative;
  }

  .c3d-container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center; /* Center everything */
    padding: 0 20px;
  }

  /* --- HEADER --- */
  .c3d-header {
    text-align: center;
    margin-bottom: 60px;
    max-width: 700px;
  }

  .c3d-subtitle {
    font-family: "Optima", Helvetica, sans-serif !important;
    font-size: 12px;
    letter-spacing: 2px;
    text-transform: uppercase;
    opacity: 0.7;
    display: block;
    margin-bottom: 15px;
  }

.c3d-heading {
    font-family: "Optima", Helvetica, sans-serif !important;
    font-size: 40px;
    font-weight: 400;
    margin: 0 0 25px 0;
    line-height: 1;
}

  .c3d-line {
    width: 60px;
    height: 1px;
    margin: 0 auto 25px; /* Centered line */
    opacity: 0.5;
  }

  .c3d-desc {
    font-family: "Optima", Helvetica, sans-serif !important;
    font-size: 0.95rem;
    line-height: 1.6;
    opacity: 0.8;
    margin: 0 auto;
  }

  /* --- SLIDER AREA --- */
  .c3d-content {
    width: 100%;
    margin-bottom: 40px;
  }

  .cv-scene {
    width: 100%;
    height: 500px;
    display: flex;
    justify-content: center;
    align-items: center;
    perspective: 1200px;
    position: relative;
  }

  .cv-track {
    position: relative;
    width: 100%;
    height: 100%;
    transform-style: preserve-3d;
  }

  /* Card Style */
  .cv-card {
    position: absolute;
    width: 300px;
    height: 450px;
    top: 25px; 
    left: 50%;
    margin-left: -150px;
    transform-style: preserve-3d;
    cursor: grab;
  }

  .cv-card-inner {
    width: 100%;
    height: 100%;
    overflow: hidden;
    background: #f4f4f4; 
    position: relative;
    transition: box-shadow 0.3s;
  }
  
  .cv-card.active .cv-card-inner {
    box-shadow: 0 30px 60px rgba(0,0,0,0.2);
  }

  .cv-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    pointer-events: none;
  }

  .cv-side-text {
    position: absolute;
    top: 20px;
    right: 15px;
    writing-mode: vertical-rl;
    text-orientation: mixed;
    font-family: "Optima", Helvetica, sans-serif !important;
    font-size: 10px;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: #000;
    background: #fff;
    padding: 10px 5px;
    opacity: 0;
    transition: opacity 0.3s;
  }
  
  .cv-card.active .cv-side-text { opacity: 1; }

  .cv-info {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 20px;
    background: #fff;
    text-align: center;
    transform: translateY(100%);
    transition: transform 0.4s ease;
  }

  .cv-card.active .cv-info { transform: translateY(0); }

  .cv-title {
    font-family: "Optima", Helvetica, sans-serif !important;
    color: #000;
    font-size: 1rem;
    margin: 0 0 5px 0;
    font-weight: 600;
  }

  .cv-price {
    font-family: "Optima", Helvetica, sans-serif !important;
    font-size: 0.85rem;
    color: #555;
    display: none;
  }

  /* --- CONTROLS (BOTTOM) --- */
  .c3d-controls {
    display: flex;
    gap: 20px;
    margin-top: 20px;
  }

  .c3d-btn {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    border: 1px solid currentColor;
    background: transparent;
    color: inherit;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: 0.3s;
  }
  .c3d-btn:hover { background: #000; color: #fff; border-color: #000; }

  /* RESPONSIVE */
  @media (max-width: 768px) {
    .c3d-heading { font-size: 34px; }
    .cv-scene { height: 400px; }
    .cv-card { width: 240px; height: 360px; margin-left: -120px; }
  }
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  const cards = gsap.utils.toArray('.cv-card');
  const nextBtn = document.querySelector('.c3d-btn.next');
  const prevBtn = document.querySelector('.c3d-btn.prev');
  const track = document.querySelector('.cv-track');
  
  const numCards = cards.length;
  let activeIndex = Math.floor(numCards / 2); 
  
  function updateCarousel() {
    cards.forEach((card, i) => {
      let distance = (i - activeIndex) % numCards;
      
      if (distance > numCards / 2) distance -= numCards;
      if (distance < -numCards / 2) distance += numCards;

      let xPos = distance * 220; 
      let scale = 1;
      let rotateY = 0;
      let zIndex = 100 - Math.abs(distance);
      let opacity = 1;
      let filter = 'grayscale(100%)'; 

      if (distance === 0) {
        scale = 1.2; 
        rotateY = 0; 
        opacity = 1;
        filter = 'grayscale(0%)'; 
        card.classList.add('active');
        card.style.pointerEvents = 'auto';
      } else {
        scale = 0.85; 
        opacity = 0.5;
        card.classList.remove('active');
        card.style.pointerEvents = 'none';

        if (distance > 0) {
          rotateY = -25; 
          xPos += 50; 
        } else {
          rotateY = 25; 
          xPos -= 50; 
        }
      }

      if(Math.abs(distance) > 2) opacity = 0;

      // Responsive Adjustments for Mobile
      if(window.innerWidth < 768) {
         xPos = distance * 140; // Tighter spacing on mobile
      }

      gsap.to(card, {
        x: xPos,
        scale: scale,
        rotateY: rotateY,
        zIndex: zIndex,
        opacity: opacity,
        filter: filter,
        duration: 0.6,
        ease: "power2.out"
      });
    });
  }

  updateCarousel();

  nextBtn.addEventListener('click', () => {
    activeIndex = (activeIndex + 1) % numCards;
    updateCarousel();
  });

  prevBtn.addEventListener('click', () => {
    activeIndex = (activeIndex - 1 + numCards) % numCards;
    updateCarousel();
  });

  let startX = 0;
  track.addEventListener('touchstart', e => startX = e.touches[0].clientX);
  track.addEventListener('touchend', e => {
    const diff = startX - e.changedTouches[0].clientX;
    if (Math.abs(diff) > 50) {
      if (diff > 0) activeIndex = (activeIndex + 1) % numCards;
      else activeIndex = (activeIndex - 1 + numCards) % numCards;
      updateCarousel();
    }
  });
  
  window.addEventListener('resize', updateCarousel);
});
</script>

{% schema %}
{
  "name": "Centered 3D Slider",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "text",

      "default": "New Arrivals"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Collection"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover our latest collection of premium products."
    },
    {
      "type": "text",
      "id": "vertical_text",
      "label": "Vertical Card Text",
      "default": "Best Product"
    }
  ],
  "blocks": [
    {
      "type": "product_card",
      "name": "Product Card",
      "settings": [

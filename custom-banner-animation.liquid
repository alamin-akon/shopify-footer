<script>
document.addEventListener("DOMContentLoaded", function () {
  gsap.registerPlugin(ScrollTrigger);

  const slides = gsap.utils.toArray(".v-slide");

  // Create one timeline for the whole section
  const tl = gsap.timeline({
    scrollTrigger: {
      trigger: ".vertical-slider-container",
      pin: true,                 // Pin the container
      start: "top top",
      end: "+=" + slides.length * 100 + "%", // Duration based on number of slides
      scrub: 1,                  // Link animation to scrollbar
      snap: 1 / (slides.length - 1) // Snap to each slide
    }
  });

  slides.forEach((slide, i) => {
    if (i === 0) return; // Skip first slide (already visible)

    // Move each next slide from bottom to top
    tl.fromTo(
      slide,
      { yPercent: 100 },
      { yPercent: 0, ease: "none" }
    );
  });
});

</script>



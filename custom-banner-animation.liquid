/* slides stack + smooth */
.vertical-slider-container{
  height: 100vh;
  overflow: hidden;
  position: relative;
}

.vertical-slider-container .v-slide{
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.vertical-slider-container .v-slide-inner{
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

.vertical-slider-container .v-slide,
.vertical-slider-container .v-slide-inner,
.vertical-slider-container .v-bg-img,
.vertical-slider-container .v-content{
  will-change: transform;
  transform: translateZ(0);
  backface-visibility: hidden;
}



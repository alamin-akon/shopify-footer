{% comment %}
  Theme Section: Vertical Full-Page Slider (Fixed Content)
  Description: All elements (BG, Text, Image) move together as one unit.
{% endcomment %}

<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>

<div class="vertical-slider-container" id="vslider-{{ section.id }}" style="--mobile-h: {{ section.settings.mobile_height }}">
  {% for block in section.blocks %}
    <div class="v-slide section-{{ block.id }}">
      
      <div class="v-slide-inner">
        
        <div class="v-bg">
           <picture>
             {% if block.settings.mobile_bg_image != blank %}
               <source media="(max-width: 768px)" srcset="{{ block.settings.mobile_bg_image | image_url: width: 800 }}">
             {% endif %}
             
             {% if block.settings.bg_image != blank %}
               <img src="{{ block.settings.bg_image | image_url: width: 2000 }}" class="v-bg-img" alt="Background">
             {% else %}
               {{ 'lifestyle-1' | placeholder_svg_tag: 'v-bg-img placeholder' }}
             {% endif %}
           </picture>
           
          <div class="v-overlay" style="background: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity }};"></div>
        </div>

        <div class="v-content">
          <div class="v-text-col">
            <span class="v-subtitle">{{ block.settings.subtitle }}</span>
            <h2 class="v-title">{{ block.settings.title }}</h2>
            <p class="v-desc">{{ block.settings.description }}</p>
            {% if block.settings.btn_label != blank %}
              <a href="{{ block.settings.btn_link }}" class="v-btn">{{ block.settings.btn_label }}</a>
            {% endif %}
          </div>

          <div class="v-image-col">
             {% if block.settings.fg_image != blank %}
              <img src="{{ block.settings.fg_image | image_url: width: 800 }}" class="v-fg-img" alt="Foreground">
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'v-fg-img placeholder' }}
            {% endif %}
          </div>
        </div>

      </div>
    </div>
  {% endfor %}
</div>
<style>
  @import url('https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600&family=Montserrat:wght@300;400;500&display=swap');

  /* Container pins everything */
  .vertical-slider-container {
    width: 100%;
    height: 100vh;
    overflow: hidden;
    position: relative;
  }

  /* Each Slide */
  .v-slide {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    /* Important: This ensures background and content are locked together */
    z-index: 1; 
  }

  .v-slide-inner {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  /* Background Layer */
  .v-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .v-bg-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .v-overlay {
    position: absolute;
    inset: 0;
  }

  /* Content Grid */
  .v-content {
    position: relative;
    z-index: 2; /* Sits on top of BG */
    width: 100%;
    height: 100%;
    max-width: 1620px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    padding: 0 50px;
    gap: 50px;
  }

  /* Text Styling */
  .v-text-col {
    color: {{ section.settings.text_color }};
  }

  .v-subtitle {
    font-family: 'Montserrat', sans-serif;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    font-size: 0.9rem;
    display: block;
    margin-bottom: 20px;
  }

  .v-title {
    font-family: 'Cinzel', serif;
    font-size: 4rem;
    line-height: 1.1;
    margin-bottom: 30px;
    color: white;
  }

  .v-desc {
    font-family: 'Montserrat', sans-serif;
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 40px;
    max-width: 500px;
  }

  .v-btn {
    display: inline-block;
    padding: 15px 40px;
    background: white;
    color: black;
    text-decoration: none;
    text-transform: uppercase;
    font-family: 'Montserrat', sans-serif;
    letter-spacing: 2px;
    font-size: 0.8rem;
  }

  /* Right Image Styling */
  .v-image-col {
    height: 60vh;
    border-radius: 15px;
    overflow: hidden;
  }

  .v-fg-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: none;
  }

